<div class="jumbotron" style="background-color:#d9edf7">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <h2 class="display-4">welcome</h2><br>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <form action="/user/signup" method="POST" class="mb-5">
        <div class="form-group">
          <label for="userEmail">Email</label>
          <input id="userEmail" class="form-control" type="email" name="email" placeholder="name@email.com">
        </div>
        <div class="form-group">
          <label for="userName">Name</label>
          <input id="userName" class="form-control" type="text" name="name" placeholder="Your name">
        </div>
        <div class="form-group">
          <label for="role">Are you a student or a teacher?</label><br>
          <select class="custom-select" id="roleInput" name="role">
            <option value="" selected disabled hidden>Please select</option>
            <option value="student">Student</option>
            <option value="teacher">Teacher</option>
          </select>
        </div>
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("roleInput").onchange = function (event) {
              if (event.target.value === "student") {
                document.getElementById("readingLevelDiv").removeAttribute("style")
              } 
              else if (event.target.value === "teacher") {
                document.getElementById("readingLevelDiv").setAttribute("style", "display:none; visibility:hidden")
              }
            }
          }, false)
        </script>
          <div class="form-group" id="readingLevelDiv" style="display:none; visibility:hidden">
            <label for="readingLevel">Reading level</label><br>
            <select class="custom-select" id="readingLevelInput" name="readingLevel">
            <option value="" selected disabled hidden>Please select</option>
            <% for (var i = 1; i < 50; i++) { %>
            <option value="<%= i %>"><%= i %></option>
            <% } %>
          </select>
          </div>
          <div class="form-group">
            <label for="gender">Gender</label><br>
            <select class="custom-select" id="genderInput" name="gender">
            <option value="" selected disabled hidden>Please select</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
          </div>
          <div class="form-group">
            <label for="age">Age</label><br>
            <select class="custom-select" id="ageInput" name="age">
            <option value="" selected disabled hidden>Please select</option>
            <% for (var i = 5; i < 50; i++) { %>
            <option value="<%= i %>"><%= i %></option>
            <% } %>
          </select>
          </div>
          <div class="form-group">
            <label for="userPassword">Password (between 8 and 30 characters please)</label>
            <input id="userPassword" class="form-control" type="password" name="password" placeholder="**********">
          </div><br>
          <button class="btn btn-primary float-right" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>