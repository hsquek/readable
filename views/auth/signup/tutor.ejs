<div class="jumbotron" style="background-color:#d9edf7">
  <div class="container">
    <div class="row">
      <div class="col-sm-6 offset-sm-3">
        <h2 class="display-4">welcome</h2><br>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-6 offset-sm-3">
      <form action="/auth/signup/tutor" method="POST" class="mb-5">
        <div id="email-form-group" class="form-group">
          <label for="email">Email</label>
          <input id="email" class="form-control" type="email" name="email" placeholder="name@email.com">
          <small id="emailRegexMessage" class="form-text form-control-feedback"></small>
        </div>
        <div id="name-form-group" class="form-group">
          <label for="name">Name</label>
          <input id="name" class="form-control" type="text" name="name" placeholder="Your name">
          <small id="nameLengthMessage" class="form-text form-control-feedback"></small>
        </div>
        <div id="phone-form-group" class="form-group">
          <label for="phone" class="mb-0">Phone</label>
          <small class="form-text text-muted mt-0 mb-2">+65 | Singapore</small>
          <input id="phone" class="form-control" type="text" name="phone" placeholder="Your contact number">
          <small id="phoneLengthMessage" class="form-text form-control-feedback"></small>
        </div>
        <div class="form-group">
          <label for="gender">Gender</label><br>
          <select class="custom-select" id="genderInput" name="gender">
            <option value="" selected disabled hidden>Please select</option>
            <option value="male">Male</option>
            <option value="female">Female</option>
          </select>
        </div>
        <div class="form-group">
          <label for="age">Age</label><br>
          <select class="custom-select" id="ageInput" name="age">
            <option value="" selected disabled hidden>Please select</option>
            <option value="16 to 25">16 to 25</option>
            <option value="26 to 35">26 to 35</option>
            <option value="36 to 45">36 to 45</option>
            <option value="46 to 55">46 to 55</option>
            <option value="56 to 65">56 to 65</option>
            <option value="above 65">Above 65</option>
          </select>
        </div>
        <div id="experience-form-group" class="form-group">
          <label for="experience" class="mb-0">Experience with kids</label><br>
          <textarea id="experience" class="form-control" name="experience" rows="5" placeholder="Please leave this space blank if you have none"></textarea>
          <small id="experienceMessage" class="form-text form-control-feedback"></small>
        </div>
        <div class="form-group">
          <label for="startDate">When did you join ReadAble?</label><br>
          <input class="form-control" id="startDate" type="date" name="startDate" value="<%= new Date().getFullYear() %>-<%= (new Date().getMonth()+1).toString().length < 2 ? '0' + (new Date().getMonth()+1).toString() : (new Date().getMonth()+1).toString() %>-<%= (new Date().getDate()+1).toString().length < 2 ? '0' + (new Date().getDate()+1).toString() : (newDate()).toString() %>">
        </div>
        <div id="password-form-group" class="form-group">
          <label for="password" class="mb-0">Your password</label><br>
          <small class="form-text text-muted mt-0 mb-2">Between 8 and 30 characters</small>
          <input id="passwordDraft" class="form-control" type="password" name="passwordDraft" placeholder="**********">
          <small class="form-text text-muted mt-1 mb-2">Please confirm</small>
          <input id="password" class="form-control" type="password" name="password" placeholder="**********">
          <small id="passwordMessage" class="form-text form-control-feedback"></small>
        </div>
        <div class="form-group">
          <label for="adminPasswordAttempt" class="mb-0">Only for ReadAble administrators</label><br>
          <small class="form-text text-muted mt-0 mb-2">Enter the password you were given</small>
          <input class="form-control" id="adminPasswordAttempt" type="password" name="adminPasswordAttempt" placeholder="**********">
        </div><br>
        <button id="submitButton" class="btn btn-primary float-right" type="submit" style="cursor:pointer;">Submit</button>
      </form>
    </div>
  </div>
</div>
<script type="text/javascript" src="/javascript/emailRegexCheck.js"></script>
<script type="text/javascript" src="/javascript/nameLengthCheck.js"></script>
<script type="text/javascript" src="/javascript/phoneLengthCheck.js"></script>
<script type="text/javascript" src="/javascript/expLengthCheck.js"></script>
<script type="text/javascript" src="/javascript/passwordLengthCheck.js"></script>
<script type="text/javascript" src="/javascript/passwordMatch.js"></script>